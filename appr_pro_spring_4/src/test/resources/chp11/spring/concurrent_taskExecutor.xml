<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="javaConcurrentExecutor" class="java.util.concurrent.Executors" factory-method="newFixedThreadPool">
		<constructor-arg value="3"></constructor-arg>
	</bean>
	
	<bean id="concurrentTaskExecutor" class="org.springframework.scheduling.concurrent.ConcurrentTaskExecutor">
		<constructor-arg ref="javaConcurrentExecutor"></constructor-arg>
	</bean>
</beans>
